<html>
    <head>
        <title><%= title %></title>
    </head>
    <body>
        <h1>welcome to ejs</h1>
        <ul>
            <% for(let i of contacts){%>
                <li>
                    <p><%= i.name %></p>
                    <p><%= i.phone %></p>
                </li>
            <%} %>
        </ul>

        <form action="/create-contact" method="POST">
            <input type="text" name="name">
            <input type="text" name="phone">
            <button type="submit">Add New Conatct</button>
        </form>
    </body>
</html>